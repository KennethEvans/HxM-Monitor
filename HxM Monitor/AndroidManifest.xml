<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.kenevans.android.hxmmonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="false" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="false"
        android:icon="@drawable/hxmmonitor"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
         <activity
            android:name=".DeviceMonitorActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceScanActivity"
            android:parentActivityName=".DeviceMonitorActivity"
            android:label="@string/title_activity_device_scan"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name=".PlotActivity"
            android:parentActivityName=".DeviceMonitorActivity"
            android:label="@string/title_activity_plot"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name=".SessionManagerActivity"
            android:parentActivityName=".DeviceMonitorActivity"
            android:label="@string/title_activity_session_manager"
            android:theme="@android:style/Theme.Holo" >
        </activity>

        <service
            android:name=".HxMBleService"
            android:enabled="true" >
        </service>
    </application>

</manifest>
