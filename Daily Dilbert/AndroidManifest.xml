<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.kenevans.android.dailydilbert"
      android:installLocation="preferExternal"
      android:versionCode="7"
      android:versionName="1.3.0">
    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/dilbert" android:label="@string/app_name">
        <activity android:name=".DailyDilbertActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".InfoActivity" android:label="@string/info_title">
		</activity>
    </application>
</manifest>